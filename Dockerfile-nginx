# Dockerfile.nginx
FROM nginx:latest

# Устанавливаем утилиту envsubst (из пакета gettext-base) – если в будущем понадобится динамическая подстановка
RUN apt-get update && apt-get install -y gettext-base

# Копируем конфигурацию nginx из папки ./nginx/conf.d в контейнер
COPY ./nginx/conf.d /etc/nginx/conf.d

# Копируем файлы приложения (если требуется)
COPY . /var/www/html

# Запускаем nginx в foreground
CMD ["nginx", "-g", "daemon off;"]
