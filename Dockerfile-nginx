# Dockerfile-nginx
FROM nginx:latest

# Install envsubst (from gettext-base) if dynamic substitution is needed later.
RUN apt-get update && apt-get install -y gettext-base

# Copy Nginx configuration files into the container.
COPY ./nginx/conf.d /etc/nginx/conf.d

# Copy application files into /var/www/html.
COPY . /var/www/html

# Expose port 9000 (so Railway forwards traffic to the container)
EXPOSE 9000

# Start Nginx in the foreground.
CMD ["nginx", "-g", "daemon off;"]
