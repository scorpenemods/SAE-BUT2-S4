# Dockerfile-php
FROM php:8.1-fpm

# Install required libraries and PHP extensions
RUN apt-get update && apt-get install -y \
    libpng-dev \
    libjpeg-dev \
    libfreetype6-dev \
    zip \
    unzip \
    net-tools

RUN docker-php-ext-configure gd --with-freetype --with-jpeg && \
    docker-php-ext-install -j$(nproc) gd pdo pdo_mysql

WORKDIR /var/www/html

# Remove ALL default PHP-FPM configuration files in the pool directory
RUN rm -f /usr/local/etc/php-fpm.d/*.conf

# Copy our custom www.conf into PHP-FPM configuration directory
COPY www.conf /usr/local/etc/php-fpm.d/www.conf

# Expose port 9000 for PHP-FPM (FastCGI)
EXPOSE 9000

# Start PHP-FPM in the foreground (-F)
CMD ["php-fpm", "-F"]
