# Dockerfile-php
FROM php:8.1-fpm

# Install required libraries and PHP extensions
RUN apt-get update && apt-get install -y \
    libpng-dev \
    libjpeg-dev \
    libfreetype6-dev \
    zip \
    unzip

# Configure and install PHP extensions
RUN docker-php-ext-configure gd --with-freetype --with-jpeg && \
    docker-php-ext-install -j$(nproc) gd pdo pdo_mysql

WORKDIR /var/www/html

# Remove the default www.conf so that our custom configuration is used
RUN rm /usr/local/etc/php-fpm.d/www.conf

# Copy our custom PHP-FPM configuration (listening on TCP 0.0.0.0:9000)
COPY php-fpm.conf /usr/local/etc/php-fpm.d/

# Expose port 9000 for PHP-FPM
EXPOSE 9000

# Start PHP-FPM
CMD ["php-fpm"]
