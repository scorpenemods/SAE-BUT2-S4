# Dockerfile-php
FROM php:8.1-fpm

# Install required libraries and PHP extensions
RUN apt-get update && apt-get install -y \
    libpng-dev \
    libjpeg-dev \
    libfreetype6-dev \
    zip \
    unzip \
    net-tools

# Configure and install PHP extensions
RUN docker-php-ext-configure gd --with-freetype --with-jpeg && \
    docker-php-ext-install -j$(nproc) gd pdo pdo_mysql

WORKDIR /var/www/html

# Force PHP-FPM to listen on 0.0.0.0:9000 (IPv4)
# The default www.conf may have a listen directive for a Unix socket.
# This sed command replaces any "listen = ..." line with "listen = 0.0.0.0:9000".
RUN sed -ri 's|^listen\s*=.*|listen = 0.0.0.0:9000|' /usr/local/etc/php-fpm.d/www.conf

# Expose port 9000 for PHP-FPM
EXPOSE 9000

# Start PHP-FPM in the foreground
CMD ["php-fpm", "-F"]
