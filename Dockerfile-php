# Dockerfile-php
FROM php:8.1-fpm

# Install required libraries and PHP extensions
RUN apt-get update && apt-get install -y \
    libpng-dev \
    libjpeg-dev \
    libfreetype6-dev \
    zip \
    unzip \
    net-tools

# Configure and install PHP extensions
RUN docker-php-ext-configure gd --with-freetype --with-jpeg && \
    docker-php-ext-install -j$(nproc) gd pdo pdo_mysql

WORKDIR /var/www/html

# Remove the default php-fpm.conf
RUN rm /usr/local/etc/php-fpm.d/php-fpm.conf

# Copy our custom php-fpm.conf
COPY www.conf /usr/local/etc/php-fpm.d/php-fpm.conf

# Expose port 9000 for PHP-FPM
EXPOSE 9000

# Start PHP-FPM in foreground (-F flag)
CMD ["php-fpm", "-F"]
