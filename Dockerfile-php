# Dockerfile-php
FROM php:8.1-fpm

# Install required libraries, PHP extensions, and net-tools (for diagnostics)
RUN apt-get update && apt-get install -y \
    libpng-dev \
    libjpeg-dev \
    libfreetype6-dev \
    zip \
    unzip \
    net-tools

# Configure and install PHP extensions
RUN docker-php-ext-configure gd --with-freetype --with-jpeg && \
    docker-php-ext-install -j$(nproc) gd pdo pdo_mysql

WORKDIR /var/www/html

# Expose port 9000 for PHP-FPM (FastCGI)
EXPOSE 9000

# Start PHP-FPM (it listens on port 9000 by default)
CMD ["php-fpm"]
